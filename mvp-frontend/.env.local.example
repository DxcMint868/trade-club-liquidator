# WalletConnect Project ID (get from https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:3000

# Base Sepolia RPC (can also use Infura/Alchemy)
NEXT_PUBLIC_RPC_URL=https://sepolia.base.org

# Bundler URL for Base Sepolia (Pimlico example)
NEXT_PUBLIC_BUNDLER_URL=https://api.pimlico.io/v2/base-sepolia/rpc?apikey=YOUR_PIMLICO_KEY

# MetaMask Delegation Manager Address (same on Base Sepolia & Monad)
NEXT_PUBLIC_DELEGATION_MANAGER_ADDRESS=0xc5d5D5D4F6F0d7B4A9d3F4bE9E8C1A2B3C4D5E6F

# EntryPoint Address (ERC-4337 v0.7)
NEXT_PUBLIC_ENTRYPOINT_ADDRESS=0x0000000071727De22E5E9d8BAf0edAc6f37da032

# Chain ID (Base Sepolia)
NEXT_PUBLIC_CHAIN_ID=84532

# Enforcers (Caveats) - Get actual addresses from MetaMask documentation
NEXT_PUBLIC_LIMITED_CALLS_ENFORCER=0x0000000000000000000000000000000000000001
NEXT_PUBLIC_ALLOWANCE_ENFORCER=0x0000000000000000000000000000000000000002

# Backend Wallet Address (who will execute delegated trades)
NEXT_PUBLIC_BACKEND_ADDRESS=0xYOUR_BACKEND_WALLET_ADDRESS
